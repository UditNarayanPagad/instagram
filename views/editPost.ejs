<% include ./partials/header.ejs %>
  
<div class="w-full min-h-screen bg-zinc-900 text-white py-5 mb-10">
    <div class="flex justify-between items-center px-4">
      <a class="text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> profile</a>
      <h2 class="leading-none text-sm">Edit Post</h2>
      <a class="text-sm" href="/feed"><i class="ri-home-line"></i> home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-full h-40 bg-sky-100 overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= post.picture %>" alt="">
      </div>
    </div>
    <div class="gap-5 px-4 mt-10">
      <form method="post" enctype="multipart/form-data" action="/updatePost/<%= post.id %>">
        <h3 class="text-sm text-zinc-300 pb-2 leading-none">Edit Picture <span class="text-xs text-yellow-300">(* Edit the picture will loss likes and comments for this post )</span></h3>
        <input id="file" type="file" name="image">
        <hr class="opacity-30 my-3">
        <h3 class="text-sm text-zinc-300 pt-2 leading-none">Edit caption <span class="text-xs text-yellow-300">(* Edit the caption will not affect to likes and comments )</span></h3>
        <textarea class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900 resize-none" placeholder="caption" name="caption"><%= post.caption %></textarea>
        <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2 cursor-pointer" type="submit" value="Update Post">
      </form>
    </div>
  </div>

<% include ./partials/footer.ejs %>