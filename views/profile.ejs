<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
    <div class="nav flex justify-between items-center px-4">
      <h3 class="text-lg">
        <%= user.username %> <i class="ri-arrow-down-s-line"></i>
      </h3>
      <div class="icons flex gap-5">
        <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
        <i class="text-[1.4rem] ri-menu-line relative cursor-pointer" onclick="logout()">
          <div id="logoutContainer" style="display: none" class="absolute top-6 right-1 flex flex-col">
            <a href="/saved" class="logOut text-sm text-white bg-blue-500 p-2 rounded-md">Saved</a>
            <a href="/logOut" class="text-sm text-white bg-red-500 px-2 p-2 rounded-md">LogOut</a>
          </div>
        </i>
      </div>
    </div>
    <div class="flex justify-start ml-4 gap-10 items-center mt-8">
      <div class="w-[80px] h-[80px] bg-black rounded-full overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.picture %>" alt="" />
      </div>
      <div class="stats flex gap-5 items-center justify-between">
        <div class="flex flex-col items-center justify-center">
          <h3>
            <%= user.posts.length %>
          </h3>
          <h4>Posts</h4>
        </div>
        <a href="/followers" class="flex flex-col items-center justify-center">
          <h3>
            <%= user.followers.length %>
          </h3>
          <h4>Followers</h4>
        </a>
        <a href="/following" class="flex flex-col items-center justify-center">
          <h3>
            <%= user.following.length %>
          </h3>
          <h4>Following</h4>
        </a>
      </div>
    </div>
    <div class="dets px-6 mt-5">
      <h3 class="text-lg mb-1">
        <%= user.name %>
      </h3>
      <p class="text-xs tracking-tight opacity-80">
        <%= user.bio ?? "You have not set anything yet, (click edit profile to set)" %>
      </p>
    </div>
    <div class="px-6 mt-5 flex gap-3">
      <a class="px-3 py-2 bg-zinc-800 text-xs rounded-md" href="/edit">Edit Profile</a>
      <a class="px-3 py-2 bg-zinc-800 text-xs rounded-md" href="#">Share Profile</a>
    </div>
    <div class="flex w-full items-center h-5 mt-7 border-b-[1px] pb-4 border-zinc-500 gap-1">
      <i class="ri-grid-line w-[33%] text-center text-2xl border-b-[2px] border-zinc-200 cursor-pointer"></i>
      <i class="ri-video-line w-[33%] text-center text-2xl cursor-pointer"></i>
      <i class="ri-price-tag-2-line w-[33%] text-center text-2xl cursor-pointer"></i>
    </div>
    <div class="posts w-full flex gap-1 py-2 mt-1 flex-wrap">
      <% if(user.posts.length>0){ %> <% user.posts.reverse().forEach(function(post){ %>
          <div class="post w-[32.5%] h-32 bg-black">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.picture %>" alt="" />
          </div>
          <% }) %>
            <% } else { %>
              <div class="w-full flex justify-center items-center min-h-[20vh]">
                <small class="opacity-50">no posts yet.</small>
              </div>
              <% } %>
    </div>
  </div>
  <script>
    function logout() {
      const btn = document.getElementById("logoutContainer");
      if (btn.style.display == "inline-block") {
        btn.style.display = "none";
      } else {
        btn.style.display = "inline-block";
      }
    }
  </script>
  <% include ./partials/footer.ejs %>